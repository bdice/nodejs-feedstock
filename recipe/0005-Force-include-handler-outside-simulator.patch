                     '<(V8_ROOT)/src/trap-handler/handler-inside-posix.cc',
                     '<(V8_ROOT)/src/trap-handler/handler-outside-posix.cc',
+		    "<(V8_ROOT)/src/trap-handler/handler-outside-simulator.cc",
